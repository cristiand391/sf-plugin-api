{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*.ts"]
}
