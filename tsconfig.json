{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "ES2021",
    "lib": ["ES2021"],
    "moduleResolution": "node",
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*.ts"]
}
